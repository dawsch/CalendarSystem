<UserControl x:Class="calendar.customCalendarDayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="DayNumber" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border x:Name="TileBorder" BorderBrush="Red" BorderThickness="1" CornerRadius="3"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 2">
            <Ellipse Width="4" Height="4" Fill="Blue" Margin="1"/>
            <Ellipse Width="4" Height="4" Fill="Blue" Margin="1"/>
            <Ellipse Width="4" Height="4" Fill="Blue" Margin="1"/>
        </StackPanel>
    </Grid>
</UserControl>
